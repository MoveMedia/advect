<!DOCTYPE html>
<html lang="en" hidden>

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <link rel="prefetch" href="/assets/advect.js" />
  <link rel="stylesheet" href="/assets/main.css" />
  
    @file.embed({ src: './assets/components/adv-auth.html' }) 
    @end
    @file.embed({ src: './assets/components/adv-search.html' }) 
    @end
  
  <link rel="icon" type="image/x-icon" href="/assets/logo.svg">
  <script>
    window.adv_config = {
      shim: {
        useShim: true
      }
    }
  </script>

  

  @if ($slots.head_assets)
  {{{ await $slots.head_assets() }}}
  @end

  @each(meta in meta_fields)
  <meta name="{{meta.name}}" content="{{meta.content}}">
  @end

  <title>{{ title }}</title>
</head>

<body class="relative">

  <header class="fixed w-[99vw] top-0 z-[100]">
    @if ($slots.header)
    {{{ await $slots.header() }}}
    @end
  </header>
  <aside>
    @if ($slots.sidebar)
    {{{ await $slots.sidebar() }}}
    @end
  </aside>
  <main class="mt-[50px]">
    @if ($slots.content)
    {{{ await $slots.content() }}}
    @end
  </main>
  <footer>
    @if ($slots.footer)
    {{{ await $slots.footer() }}}
    @end
    @if ($slots.footer_assets)
    {{{ await $slots.footer_assets() }}}
    @end
    <script type="module" async src="/assets/advect.js"></script>
  </footer>
</body>

</html>