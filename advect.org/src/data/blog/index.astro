---
import BlogLayout from '../../layouts/BlogLayout.astro';
import { blogPages, type BlogPage } from '../../data/blog';
import BlogBlurb from '../../components/BlogBlurb.astro';

export const pageInfo:BlogPage = {
    name:'Blog home',
    index: -1,
    blurb:'',
    hide:true,
    slug: '/',
}
---

<BlogLayout {...Astro.props}>
    <div class="container">
        <div class="content">
            <h1 class="title is-1 has-text-centered">Blog</h1>
        </div>
    </div>
    <hr>
    <div class="container">
        <div class="content">
            <h2 class="is-underlined">Recent Posts</h2>
        </div>
        <div class="block">
            {blogPages.filter(bp => !bp.pageInfo.hide).map((v) =>{
                return <BlogBlurb page={v} />
            })}
        </div>
    </div>
</BlogLayout>
